{% extends '::base.html.twig'%}

{% block title %}{{ parent() ~ ' - ' ~ contact.firstName ~ ' ' ~ contact.surname }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block footjavascripts %}
    {{ parent() }}

    {% javascripts
        'assets/jquery/dist/jquery.min.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    
{% endblock %}

{% block body %}
    <div class="single-contact">
            <h1 class="contact-name">{{ contact.firstName }} {% if contact.middleNames %}&lsquo;{{ contact.middleNames }}&rsquo; {% endif %}{{ contact.surname }}</h1>
            <i class="fa fa-star{% if not contact.favourite %}-o{% endif %} favourite h1"></i>
        <p><em>Added: {{ contact.dateAdded|date("d/m/Y") }}</em></p>
        {% for address in contact.addresses %}
            <div class="row address">
                <div class="col-md-2">
                    <h3 class="address-title">{{ address.title }}</h3>
                </div>
                <div class="col-md-10">
                    <address>
                        <span>{{ address.lineOne }}</span>
                        {% if address.lineTwo %}<span>{{ address.lineTwo }}</span>{% endif %}
                        <span>{{ address.city }}</span>
                        <span>{{ address.county }}</span>
                        <span>{{ address.postCode }}</span>
                    </address>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}